//output:../bookInfo.html, doctype:strict
html(lang='en', xmlns:th='http://www.w3.org/1000/xhtml')
    head(th:replace='common/header :: common-header')/
    link(href='https://cdnjs.cloudflare.com/ajax/libs/aos/2.1.1/aos.css', rel='stylesheet')
    body
        div(th:replace='common/header :: navbar')/
        #nav.container
            div
                ol.breadcrumb
                    li
                        a(th:href='@{/book/bookList}')
                            i.fa.fa-long-arrow-left(aria-hidden='true')
                            | 回上一頁
                    li
                        a(th:href='@{/book/updateBook?id=}+${book.id}') 編輯
          .row 
            .col-xs-12.text-center
              h2(th:text="${user}? '使用者'+${#strings.toUpperCase(user.username)}+'的個人物資編輯' : '供應者物資編輯'")
          .row
            .col-xs-1
            .col-xs-3
                .panel.panel-default
                    .panel-body
                        img.img-responsive.center-block(th:src="@{/imgs/book/}+${book.id}+'.png'")
            .col-xs-6(style="font-size: 1.2em;")
                h3(th:text='${book.title}', Style="color:rgb(86, 174, 134);")
                .row
                    .col-xs-6
                        p
                            strong 製造商：
                            span(th:text='${book.author}')
                        p
                            strong 經銷商：
                            span(th:text='${book.publisher}')
                        p
                            strong 製造日期：
                            span(th:text='${book.publicationDate}')
                        p
                            strong 產地：
                            span(th:text='${book.language}')
                        p
                            strong 分類：
                            span(th:text='${book.category}')
                        p
                            strong 單位重量：
                            span(th:text='${book.numberOfPages}')
                    .col-xs-6
                        p
                            strong 保存方式：
                            span(th:text='${book.format}')
                        p
                            strong 相關認證字號：
                            span(th:text='${book.isbn}')
                        p
                            strong 運費：
                            span(th:text='${book.shippingWeight}')
                        p
                            strong 公司價：
                            span(th:text='${book.listPrice}')
                        p
                            strong 賣家價：
                            span(th:text='${book.ourPrice}')
                        p
                            strong 庫存： 
                            span(th:text='${book.inStockNumber}')
                        p
                            strong 描述: 
                            span(th:utext='${book.description}')
            .col-xs-2
        .py-5.bg-theme.text-center(style='position: relative; top: 60px; width: 100%; margin-top: 60px; padding:20px 0;')
          .container
            .row
              .col-4.col-md-4
                a(th:href='@{/book/bookList}', style="color:#fff")
                  i.fa.fa-5x.fa-fw.fa-arrow-left
              .col-4.col-md-4
                a(th:href='@{/book/updateBook?id=}+${book.id}',style="color:#fff")
                  i.fa.fa-5x.fa-fw.fa-pencil
              .col-4.col-md-4
                //- a(href='#nav',style="color:darkred")
                //-   i.fa.fa-5x.fa-fw.fa-times    
                input(hidden='hidden', name='id', th:value='${book.id}')
                a.btn.bg-theme.btn-xs.delete-one-book(th:id="'oneBook-'+${book.id}", type='submit', value='delete')
                  i.fa.fa-5x.fa-times(style="color:darkred")
                                  
        div(th:replace='common/header :: body-bottom-scripts')/
